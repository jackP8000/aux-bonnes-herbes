<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>{% block title %}{{ 'doctype-title'|trans({}, 'base') }}{% endblock %}</title>
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
</head>
<body>

<header>
    <div class="container">
        <div class="row">
            <div class="col">
                <h1 class="header-logo-text"><a href="{{ path('homepage') }}">{{ 'header-title'|trans({}, 'base') }}</a>
                </h1>
                <p class="tagline">{{ 'header-title-tagline'|trans({}, 'base') }}</p>
            </div>
        </div>


        <nav class="navbar navbar-expand-md">
            <button class="navbar-toggler" type="button" data-target="#navbarCollapse" aria-controls="navbarCollapse">
                
            </button>
            <div class="container">
                <div class="row">
                    <div class="col">
                        <ul class="nav nav-pills nav-justified">
                            <li class="nav-item active">
                                <a class="nav-link" href="{{ path('biography') }}">{{ 'biography'|trans({}, 'nav') }}
                                    <span
                                            class="sr-only">(current)</span></a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="dropdown01" data-toggle="dropdown"
                                   aria-haspopup="true" aria-expanded="false">
                                    {{ 'lodging'|trans({}, 'nav') }}
                                </a>
                                <div class="dropdown-menu" aria-labelledby="dropdown01">
                                    <a class="dropdown-item" href="#">lodging1</a>
                                    <a class="dropdown-item" href="#">lodging2</a>
                                    <a class="dropdown-item"
                                       href="{{ path('mettrie_place') }}">{{ 'mettrie-place'|trans({}, 'nav') }}</a>
                                    <a class="dropdown-item"
                                       href="{{ path('prestations') }}">{{ 'prestations'|trans({}, 'nav') }}</a>
                                </div>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('nearby') }}">{{ 'nearby'|trans({}, 'nav') }}</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('contact') }}">{{ 'contact'|trans({}, 'nav') }}</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>

    </div>
</header>


{% block body %}{% endblock %}
{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}
</body>
</html>
